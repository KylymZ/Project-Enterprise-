@model IEnumerable<Enterprises.Budgets>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Бюджет";
}

<style>
    a {
        /*        text-align:left;
    */ text-decoration: none;
        color: green;
    }

    h1 {
        font-weight: bold;
        font-family: 'Times New Roman', Times, serif;
    }

    .container {
        background-color: #d9d9d9;
    }

    tbody {
        text-align: left;
    }

    p, a:hover {
        color:black;
    }

    p {
        text-align: left;
    }
</style>

<div class="promo-block">
    <div class="container">
        <div class="margin-b-40">
            <div class="text-center">
                <h1 class="display-4">Предприятия по производству кондитерских изделий</h1>
            </div>
            <br />
            <h2>Бюджет</h2>
            <p>
                <a asp-action="Create">Добавить новую запись</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Сумма бюджета
                        </th>
                        <th>
                            Процент продажи
                        </th>
                        <th>
                            Бонус
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budgetamount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalePercentage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bonus)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Обновить</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>

