@model Enterprises.Budgets

@{
    ViewData["Title"] = "Изменение";
}

<style>
    h1, h4 {
        text-align: left;
        color: aqua;
    }

    .row {
        font-size: 18px;
        width: auto;
        color: #ffffff;
    }
</style>

<div class="promo-block">
    <div class="container">
        <div class="margin-b-40">
            <div class="text-center">
                <h1 class="display-4">Предприятия по производству кондитерских изделий</h1>
            </div>
            <br /><h1>Изменение</h1>
            <h4>Бюджет</h4>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Budgetamount" class="control-label">Сумма бюджета</label>
                            <input asp-for="Budgetamount" class="form-control" />

                        </div>
                        <div class="form-group">
                            <label asp-for="SalePercentage" class="control-label">Процент продажи</label>
                            <input asp-for="SalePercentage" class="form-control" />

                        </div>
                        <div class="form-group">
                            <label asp-for="Bonus" class="control-label">Бонус</label>
                            <input asp-for="Bonus" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Сохранить" class="btn btn-success" />
                        </div>
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-primary">Назад</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        </div>
    </div>


