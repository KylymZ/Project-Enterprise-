@model Enterprises.Ingredients

@{
    ViewData["Title"] = "Удаление";
}

<style>
    h1, h4 {
        text-align: left;
        color: aqua;
    }

    .row {
        font-size: 18px;
        width: auto;
        color: #ffffff;
    }
</style>
<div class="promo-block">
    <div class="container">
        <div class="margin-b-40">
            <div class="text-center">
                <h1 class="display-4">Предприятия по производству кондитерских изделий</h1>
            </div>
            <br />  <h1>Удаление</h1>

            <div>
                <h4>Ингредиенты</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Кол.ингредиентов
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Countingred)
                    </dd>
                    <dt class="col-sm-2">
                        Продукт
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductNavigation.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Сырье
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RawMaterialsNavigation.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Удалить" style="font-size:20px;" class="btn btn-danger" />

                </form>
            </div>
            <br />
            <div>
                <a asp-action="Index" class="btn btn-primary" style="font-size:20px;">Назад</a>
            </div>
        </div>
    </div>
</div>

