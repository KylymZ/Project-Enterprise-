@model Enterprises.Ingredients

@{
    ViewData["Title"] = "Изменение";
}

<style>
    h1, h4 {
        text-align: left;
        color: aqua;
    }

    .row {
        font-size: 18px;
        width: auto;
        color: #ffffff;
    }
</style>

<div class="promo-block">
    <div class="container">
        <div class="margin-b-40">
            <div class="text-center">
                <h1 class="display-4">Предприятия по производству кондитерских изделий</h1>
            </div>
            <br /><h1>Изменение</h1>

            <h4>Ингредиенты</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Product" class="control-label">Продукт</label>
                            <select asp-for="Product" class="form-control" asp-items="ViewBag.Product"></select>
                            <span asp-validation-for="Product" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RawMaterials" class="control-label">Сырье</label>
                            <select asp-for="RawMaterials" class="form-control" asp-items="ViewBag.RawMaterials"></select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Countingred" class="control-label">Кол.ингредиентов</label>
                            <input asp-for="Countingred" class="form-control" />

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Сохранить" class="btn btn-success" />
                        </div>
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-primary">Назад</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>