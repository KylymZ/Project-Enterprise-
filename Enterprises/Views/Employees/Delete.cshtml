@model Enterprises.Employees

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    h1, h4 {
        text-align: left;
        color: aqua;
    }

    .row {
        font-size: 18px;
        width: auto;
        color: #ffffff;
    }
</style>

<div class="promo-block">
    <div class="container">
        <div class="margin-b-40">
            <div class="text-center">
                <h1 class="display-4">Предприятия по производству кондитерских изделий</h1>
            </div>
            <br />  <h1>Удаление</h1>
            <div>
                <h4>Сотрудники</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        ФИО
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Fullname)
                    </dd>
                    <dt class="col-sm-2">
                       Оклад
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Salary)
                    </dd>
                    <dt class="col-sm-2">
                        Адрес
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                       Телефон
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telephone)
                    </dd>
                    <dt class="col-sm-2">
                      Должность
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PositionNavigation.Position)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" style="font-size:20px" value="Удалить" class="btn btn-danger" />
                </form>
            </div>
            <br />
            <div>
                <a asp-action="Index" class="btn btn-primary" style="font-size:20px;">Назад</a>
            </div>
        </div>
    </div>
</div>
